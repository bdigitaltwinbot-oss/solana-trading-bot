# Solana Trading Bot Environment Configuration

# Trading Mode
ENABLE_TRADING=false
DRY_RUN=true

# Wallet Configuration
# Option 1: Use generated wallet (recommended)
WALLET_PATH=./wallet.json
# Option 2: Manual private key (base64 encoded)
# SOLANA_PRIVATE_KEY=

# Solana Network
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Alternative: Helius, QuickNode for better performance
# SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Jupiter DEX
JUPITER_API_URL=https://quote-api.jup.ag/v6
JUPITER_PRICE_URL=https://price.jup.ag/v4

# Trading Parameters
STARTING_CAPITAL_USD=500
MAX_POSITION_SIZE_USD=50
MAX_POSITIONS=3
STOP_LOSS_PERCENT=15
TAKE_PROFIT_PERCENT=30
PORTFOLIO_STOP_LOSS_PERCENT=30

# Strategy Parameters
MIN_LIQUIDITY_USD=1000000
MIN_TOKEN_AGE_HOURS=24
VOLUME_LOOKBACK_HOURS=4
MOMENTUM_THRESHOLD=1.5
RESISTANCE_BREAK_THRESHOLD=0.02

# Monitoring
MARKET_SCAN_INTERVAL_MS=30000
POSITION_CHECK_INTERVAL_MS=10000
HEARTBEAT_INTERVAL_MS=300000

# Risk Management
MAX_DAILY_TRADES=10
COOLDOWN_MINUTES_BETWEEN_TRADES=5

# Alerts - Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Alerts - Discord
DISCORD_WEBHOOK_URL=

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# State Management
STATE_FILE_PATH=./data/bot-state.json
POSITIONS_FILE_PATH=./data/positions.json
TRADES_FILE_PATH=./data/trades.json

# Token Whitelist (comma-separated mints)
# Leave empty to scan all liquid tokens
WHITELIST_TOKENS=

# Blacklist (comma-separated mints)
BLACKLIST_TOKENS=
