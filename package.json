{
  "name": "solana-trading-bot",
  "version": "2.0.0",
  "description": "Solana momentum trading bot with Jupiter DEX",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:daemon": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop solana-trading-bot",
    "restart": "pm2 restart solana-trading-bot",
    "logs": "pm2 logs solana-trading-bot",
    "wallet:generate": "node scripts/generate-wallet.js",
    "wallet:balance": "node scripts/check-balance.js",
    "docker:build": "docker build -t solana-trading-bot .",
    "docker:run": "docker run -d --name trading-bot --restart unless-stopped -v $(pwd)/data:/app/data -v $(pwd)/logs:/app/logs solana-trading-bot",
    "test": "jest",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.0",
    "@solana/spl-token": "^0.3.9",
    "@jup-ag/core": "^4.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.64.0",
    "discord.js": "^14.14.0",
    "bottleneck": "^2.19.5"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "pm2": "^5.3.0"
  },
  "keywords": [
    "solana",
    "trading",
    "jupiter",
    "momentum",
    "bot"
  ],
  "author": "",
  "license": "MIT"
}
